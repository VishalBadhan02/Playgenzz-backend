# 1Ô∏è‚É£ Use official Node.js image
FROM node:23-slim

# 2Ô∏è‚É£ Install OpenSSL (if using Prisma or require secure connections)
RUN apt-get update && apt-get install -y openssl && rm -rf /var/lib/apt/lists/* && npm install -g pnpm

# 3Ô∏è‚É£ Enable Corepack (for pnpm)
RUN corepack enable

# 4Ô∏è‚É£ Set root working directory
WORKDIR /app

# Optional: ARG for conditional copy if needed
ARG INCLUDE_PROTOS=true

# Copy protos during build if INCLUDE_PROTOS is true
# RUN if [ "$INCLUDE_PROTOS" = "true" ]; then \
#       echo "Copying protos..."; \
#       mkdir -p ./protos; \
#     fi

# 5Ô∏è‚É£ Copy shared protos folder
COPY protos ./protos

# 6Ô∏è‚É£ Set working directory inside the service
WORKDIR /app/notification-service

# 7Ô∏è‚É£ Copy only package manager files first for caching
COPY notification-service/package.json notification-service/pnpm-lock.yaml ./

# 8Ô∏è‚É£ Install dependencies
RUN pnpm install --no-frozen-lockfile

# 9Ô∏è‚É£ Copy rest of the service code after installing dependencies
COPY notification-service ./

# üîü (Optional) Generate Prisma client if needed
# RUN pnpm prisma generate

# 1Ô∏è‚É£1Ô∏è‚É£ Expose port
EXPOSE 7002

# 1Ô∏è‚É£2Ô∏è‚É£ Start service
CMD ["pnpm", "dev"]
