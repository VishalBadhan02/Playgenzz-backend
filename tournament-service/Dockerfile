# 1Ô∏è‚É£ Use official Node.js image
FROM node:23-slim

# 2Ô∏è‚É£ Install OpenSSL (needed for Prisma or other secure tools)
RUN apt-get update && apt-get install -y openssl && rm -rf /var/lib/apt/lists/* && npm install -g pnpm

# 3Ô∏è‚É£ Enable Corepack (to use pnpm)
RUN corepack enable

WORKDIR /app

# Optional, conditional build logic
ARG INCLUDE_PROTOS=true

# 5Ô∏è‚É£ Copy shared protos
COPY protos/ ./protos

WORKDIR /app/tournament-service


# 7Ô∏è‚É£ Copy only package manager files first to leverage Docker cache
COPY tournament-service/package.json .
COPY tournament-service/pnpm-lock.yaml .

# 8Ô∏è‚É£ Install dependencies
RUN pnpm install --no-frozen-lockfile

# 9Ô∏è‚É£ Copy the rest of the service source code
COPY tournament-service/src ./src
COPY tournament-service/.env ./env

# üîü (Optional) Generate Prisma client if needed
# RUN pnpm prisma generate

# 1Ô∏è‚É£1Ô∏è‚É£ Expose the service port
EXPOSE 7006

# üöÄ Start the service
CMD ["pnpm", "dev"]
