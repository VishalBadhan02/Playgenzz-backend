FROM node:23-slim


# 2Ô∏è‚É£ Install OpenSSL (required for Prisma or secure operations)
RUN apt-get update && apt-get install -y openssl && rm -rf /var/lib/apt/lists/* && npm install -g pnpm


# 3Ô∏è‚É£ Enable Corepack (to get pnpm)
RUN corepack enable

# 4Ô∏è‚É£ Set root working directory
