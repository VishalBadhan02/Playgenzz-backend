# 1Ô∏è‚É£ Use official Node.js image
FROM node:23-slim

# 2Ô∏è‚É£ Install OpenSSL (for Prisma if used)
RUN apt-get update && apt-get install -y openssl && rm -rf /var/lib/apt/lists/* && npm install -g pnpm

# 3Ô∏è‚É£ Enable Corepack (to use pnpm)
RUN corepack enable

# 4Ô∏è‚É£ Set working directory
WORKDIR /app

# Optional, conditional build logic
ARG INCLUDE_PROTOS=true

# 5Ô∏è‚É£ Copy shared protos
COPY protos/ ./protos

# 6Ô∏è‚É£ Set working directory for user-service
WORKDIR /app/user-service

# 7Ô∏è‚É£ Copy only package manager files first to leverage Docker cache
COPY user-service/package.json user-service/pnpm-lock.yaml ./

# 8Ô∏è‚É£ Install dependencies
RUN pnpm install --no-frozen-lockfile

# 9Ô∏è‚É£ Copy the rest of the user-service source code
COPY user-service/src ./src
COPY user-service/.env ./env

# üîü (Optional) Generate Prisma client if used
# RUN pnpm prisma generate

# 1Ô∏è‚É£1Ô∏è‚É£ Expose the service port
EXPOSE 7007

# üöÄ Start the service
CMD ["pnpm", "dev"]
